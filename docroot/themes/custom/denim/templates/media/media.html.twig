{#
/**
 * @file
 * Theme override to display a media item.
 *
 * Available variables:
 * - name: Name of the media.
 * - content: Media content.
 *
 * @see template_preprocess_media()
 *
 * @ingroup themeable
 */
#}
<figure{{ attributes }}>
  {{- title_prefix -}}
  {{- title_suffix -}}

  {{ media_embed }}

  {% if content %}
    <figcaption{{ figcaption_attributes }}>

      {% if title %}
        <header{{ title_attributes }}>
          {{ title }}
        </header>
      {% endif %}

      <div{{ content_attributes }}>
        {{ content }}
      </div>

    </figcaption>
  {% endif %}

</figure>
